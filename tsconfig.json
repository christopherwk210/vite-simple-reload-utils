{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "useDefineForClassFields": true,
        "noImplicitThis": true,
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}